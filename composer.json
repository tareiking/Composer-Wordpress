{
    "_comment": "The scripts line will auto install roots-child",
    "scripts": {
        "post-install-cmd":
            "git clone git@github.com:tareiking/roots-child.git app/themes/roots-child",
        "post-install-cmd":            
            "cp wp/wp-config-sample.php ./wp-config.php"
    },
    "repositories": [
        {
            "type":"composer",
            "url":"http://wpackagist.org"
        },
        {
            "type": "package",
            "package": {
                "name": "roots/roots",
                "type": "wordpress-theme",
                "version": "6.5",
                "trunk-path": "master",
                "source": {
                    "type": "git",
                    "url": "https://github.com/roots/roots.git",
                    "reference": "6.5.0"
                },
                "require": {
                    "fancyguy/webroot-installer": "1.0.0"
                }
            }
        },        
        {
            "type": "package",
            "package": {
                "type": "webroot",
                "name": "wordpress/wordpress",
                "version": "3.6",
                "dist": {
                    "url": "https://github.com/WordPress/WordPress/archive/3.6.zip",
                    "type": "zip"
                },
                "require": {
                    "fancyguy/webroot-installer": "1.0.0"
                }
            }
        }
    ],
    "require": {
        "wordpress/wordpress": "3.6",
        "wpackagist/advanced-custom-fields": "*",
        "wpackagist/custom-post-type-ui": "*",
        "roots/roots": "*"
    },
    "extra": {
        "installer-paths": {
            "app/plugins/{$name}/": ["type:wordpress-plugin"],
            "app/themes/{$name}/": ["type:wordpress-theme"]
        },
        "webroot-dir": "wp",
        "webroot-package": "wordpress/wordpress"
    }
}
